@page
@model ProyectoCiclo3.App.Frontend.Pages.FormServicioModel 
@{
}
 
<div class="text-center">
<form method="POST">
@* <label for="id" class="form-label">Id:</label>

      <input type="number" class="form-control" id="id" placeholder="Id" asp-for="Servicio.id"> *@
      <label for="origen" class="form-label">Origen:</label>
      <select asp-for="Servicio.origen" class="form-control">
        <option value="">-</option>
        @foreach (var usuario in Model.Usuario){
        <option value="@usuario.id">@usuario.nombre @usuario.apellido</option>
        }
      </select>
      <label for="destino" class="form-label">Destino:</label>
      <select asp-for="Servicio.destino" class="form-control">
        <option value="">-</option>
        @foreach (var usuario in Model.Usuario){
        <option value="@usuario.id">@usuario.nombre @usuario.apellido</option>
       }
      </select>
      <label for="fecha" class="form-label">fecha:</label>
      <input type="date" class="form-control" id="fecha" placeholder="fecha" asp-for="Servicio.fecha"required>
      <label for="hora" class="form-label">hora:</label>
      <input type="time" class="form-control" id="hora" placeholder="hora" asp-for="Servicio.hora"required>
      <label for="encomienda" class="form-label"> Encomienda:</label>

      <select asp-for="Servicio.encomienda" class="form-control">
        <option value="">-</option>
        @foreach (var encomienda in Model.Encomienda){
        <option value="@encomienda.id">@encomienda.descripcion @encomienda.peso</option>
      }
      </select>

     
      <hr>
      <button type="submit" class="btn btn-success">Enviar</button>
    </form>
  </div>
  